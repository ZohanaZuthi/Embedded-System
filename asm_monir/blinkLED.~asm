DATA SEGMENT
PORTA EQU 00H
PORTB EQU 02H
PORTC EQU 04H
PORT_CON EQU 06H
DATA ENDS

CODE SEGMENT
MOV AX, DATA
MOV DS, AX

ORG 0000H
START:
MOV DX, PORT_CON
MOV AL, 10000000B ;port C (output), port A (output) in mode 0 and PORT B (output) in mode 0
OUT DX, AL

MAIN_LOOP:
MOV AL, 000000000B ;Turn off LED connected to PORTA
MOV DX, PORTA
OUT DX, AL

MOV CX, 0FFFFH ;Delay
DELAY_LOOP1: loop DELAY_LOOP1

MOV AL, 000000001B ;Turn on LED connected to PORTA
MOV DX, PORTA
OUT DX, AL

MOV CX, 0FFFFH ;Delay
DELAY_LOOP2: loop DELAY_LOOP2
JMP MAIN_LOOP

CODE ENDS
END

